<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client">
	<ui:style>
		.main {
			width: 100%;
		}
		
		.name {
			width: 100px;
		}
		
		.date {
			text-align: right;
		}
	</ui:style>
	<g:HorizontalPanel styleName="{style.main}">
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
			<g:Label ui:field="name" addStyleNames="{style.name}" />
		</g:cell>

		<g:cell horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_MIDDLE">
			<d:DateBox ui:field="date" addStyleNames="{style.date}" />
		</g:cell>
	</g:HorizontalPanel>
</ui:UiBinder> 